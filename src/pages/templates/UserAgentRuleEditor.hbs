{{> RuleEditorHeader heading="Override User-Agent in HTTP Request"}}

<section class="rule-body content-body">
  {{> RuleProperties}}

  {{> PairsContainerHeading heading="Source User-Agent Pairs" }}

  <div class="pairs-container">
    {{#each pairs}}
      <div class="well well-sm pair-container" data-index="{{@index}}">
        <div class="row">
          <div class="destination-container">
            <label class="active">{{readGlobalVar "RQ.HEADER_NAMES.USER_AGENT"}}</label>
            <input type="text" class="useragent-input form-control" data-key="userAgent" value="{{userAgent}}"
                   placeholder="Enter user agent string">
          </div>
        </div>

        {{> SourceField sourcePlaceholder="Leave this field Empty to apply above modification to all urls" }}
      </div>
    {{/each}}
  </div>

  {{> SaveRuleCTA }}
</section>